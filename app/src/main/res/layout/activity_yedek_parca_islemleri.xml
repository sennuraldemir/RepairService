<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onarim33"
    android:orientation="vertical"
    tools:context=".YedekParcaIslemleri">

    <include layout="@layout/baslik"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/edit"
                android:text="Mevcut Yedek Parça Tipleri: "
                android:textAlignment="center"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spn_yedekparcatip"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/grey"
                android:dropDownVerticalOffset="80dp"
                android:dropDownSelector="@color/gri2"
                android:popupBackground="@color/gri2"
                android:scrollbarSize="100sp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/edit"
                android:text="Mevcut Yedek Parçalar: "
                android:textAlignment="center"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spn_yedekparca"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/grey"
                android:dropDownVerticalOffset="80dp"
                android:dropDownSelector="@color/gri2"
                android:popupBackground="@color/gri2"
                android:scrollbarSize="100sp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/parca_adi_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@color/edit"
                android:hint="Yedek Parça Adı :"
                android:textAlignment="center"
                android:textSize="35dp">

            </EditText>

            <EditText
                android:id="@+id/yedekparcaaciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@color/edit"
                android:hint="Açıklama :"
                android:textAlignment="center"
                android:textSize="35dp">

            </EditText>


            <EditText
                android:id="@+id/editTextfiyat"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/krem"
                android:ems="10"
                android:hint="Parça fiyatını girin :"
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/editTextstok"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/krem"
                android:ems="10"
                android:hint="Parça Stok Miktarını girin :"
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/editTextstokmin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/krem"
                android:ems="10"
                android:hint="Min Stok Miktarı :"
                android:inputType="number">

            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/edit"
                android:text="Mevcut Markalar: "
                android:textAlignment="center"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spn_marka"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/mavi3"
                android:dropDownVerticalOffset="80dp"
                android:dropDownSelector="@color/white"
                android:popupBackground="@color/white"
                android:scrollbarSize="100sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/edit"
                android:text="Mevcut Modeller: "
                android:textAlignment="center"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spn_model"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/grey"
                android:dropDownVerticalOffset="80dp"
                android:dropDownSelector="@color/gri2"
                android:popupBackground="@color/gri2"
                android:scrollbarSize="100sp"
                android:textAlignment="center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kaydet_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gri2"
                    android:text="Kaydet">

                </Button>

                <Button
                    android:id="@+id/guncelle_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gri2"
                    android:text="Güncelle">

                </Button>

                <Button
                    android:id="@+id/sil_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:backgroundTint="@color/gri2"
                    android:text="Sil">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>