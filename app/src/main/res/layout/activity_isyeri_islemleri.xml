<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarSize="20dp"
    android:background="@drawable/onarim33"
    tools:context=".IsyeriIslemleri">

    <include layout="@layout/baslik"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mevcut İşyerleri: "
        android:textAlignment="center"
        android:background="@color/gri2"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spn_isyeri"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mavi3"
        android:dropDownVerticalOffset="80dp"
        android:dropDownSelector="@color/white"
        android:popupBackground="@color/white"
        android:scrollbarSize="100sp"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/isyeri_adi_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginBottom="30dp"
        android:background="#98989C"
        android:hint="İşyeri Adı Giriniz:"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center">

    </EditText>

    <EditText
        android:id="@+id/isyeri_aciklama_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="35dp"
        android:background="#98989C"
        android:hint="Açıklama Giriniz:"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/kaydet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet"
            android:backgroundTint="@color/gri2"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/guncelle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güncelle"
            android:backgroundTint="@color/gri2"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/sil_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Sil"
            android:backgroundTint="@color/gri2">

        </Button>

    </LinearLayout>


</LinearLayout>