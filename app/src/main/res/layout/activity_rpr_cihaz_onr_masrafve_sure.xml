<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/onarim33"
    android:layout_height="match_parent"
    tools:context=".RPR_Cihaz_OnrMasrafveSure">


    <include layout="@layout/baslik"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/cihaz_rapor_edit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arka_plan_spinner"
            android:backgroundTint="@null"
            android:dropDownVerticalOffset="100dp"
            android:dropDownSelector="@color/gri2"
            android:popupBackground="@color/gri2"
            android:scrollbarSize="200sp"
            android:hint="Envanter No Girin:"
            android:textAlignment="center"
            android:textColor="@color/edit" />

        <Button
            android:id="@+id/ara_Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_search_24"
            android:text=" "
            android:textColor="@color/gri2"
            android:textColorLink="@color/gri2" />


    </LinearLayout>

    <TextView
        android:id="@+id/chzOnrMsrfText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/edit"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/chzOnrSureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/edit"
        android:layout_marginTop="30dp"
        android:textSize="20dp" />


    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chz_onr_msrfvesure">

    </com.github.mikephil.charting.charts.BarChart>


</LinearLayout>