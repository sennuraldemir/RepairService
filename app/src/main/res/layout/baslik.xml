<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#3B3C3C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_tablet_android_24"
            android:layout_centerVertical="true"
            android:onClick="homeClick"
            >

        </ImageView>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/homeIcon"
            android:text="Repair SERVÄ°CE"
            android:textColor="@color/krem"
            android:textSize="20sp"

            android:layout_centerVertical="true"
            >

        </TextView>

        <ImageView
            android:id="@+id/homeIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twotone_stars_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dp"
            android:onClick="homeClick"
            >

        </ImageView>
    </RelativeLayout>

</RelativeLayout>