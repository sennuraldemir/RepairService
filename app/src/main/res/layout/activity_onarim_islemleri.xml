<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnarimIslemleri"
    android:background="@drawable/onarim33"
    android:orientation="vertical">


    <include layout="@layout/baslik"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/onarim_islemleri_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.6"
            android:background="@drawable/arka_plan_spinner"
            android:backgroundTint="@null"
            android:dropDownVerticalOffset="100dp"
            android:dropDownSelector="@color/gri2"
            android:popupBackground="@color/gri2"
            android:scrollbarSize="200sp"
            android:textAlignment="center"
            android:hint="Envanter No Girin:"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/ara_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_search_24"
            android:text=""
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/yeni_onarim_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_browser_updated_24"
            android:text=""
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mevcut OnarÄ±mlar: "
        android:textAlignment="center"
        android:background="@color/edit"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_onarim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

        </LinearLayout>

    </ScrollView>


</LinearLayout>