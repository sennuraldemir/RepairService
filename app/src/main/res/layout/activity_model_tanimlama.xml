<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModelTanimlama"
    android:background="@drawable/onarim33"
    android:orientation="vertical">

    <include layout="@layout/baslik"/>

    <Spinner
        android:id="@+id/spn_model"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/mavi3"
        android:dropDownVerticalOffset="80dp"
        android:dropDownSelector="@color/gri2"
        android:popupBackground="@color/gri2"
        android:scrollbarSize="100sp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <Spinner
        android:id="@+id/spn_marka"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/mavi3"
        android:dropDownVerticalOffset="80dp"
        android:dropDownSelector="@color/gri2"
        android:popupBackground="@color/gri2"
        android:scrollbarSize="100sp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/model_adi_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginBottom="30dp"
        android:background="#98989C"
        android:hint=" Model Adı Giriniz:"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </EditText>

    <EditText
        android:id="@+id/model_aciklama_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="35dp"
        android:background="#98989C"
        android:hint=" Açıklamayı Giriniz:"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/kaydet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet"
            android:backgroundTint="@color/grey">

        </Button>

        <Button
            android:id="@+id/guncelle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güncelle"
            android:backgroundTint="@color/grey">

        </Button>

        <Button
            android:id="@+id/sil_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Sil"
            android:backgroundTint="@color/grey">

        </Button>

    </LinearLayout>

</LinearLayout>